---
import "../styles/global.css";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  hideNav?: boolean;
}

const {
  title = "TaylorMade Landscapes | Nelson Landscape Design & Gardening",
  description = "Owner-operated landscape gardening, design, and build across Nelson and Tasman by Giles Taylor.",
  hideNav = false,
} = Astro.props as Props;
---

<!doctype html>
<html lang="en" data-theme="garden" style="--spacing: 0.25rem;">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://taylormadelandscapes.nz" />
    <meta
      property="og:image"
      content="https://taylormadelandscapes.nz/og-image.jpg"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.min.js" defer
    ></script>
    <style is:inline>
      :root {
        --spacing: 0.25rem;
      }
    </style>
    <script is:inline>
      document.documentElement.style.setProperty("--spacing", "0.25rem");
    </script>
  </head>
  <body class="flex min-h-screen flex-col bg-base-100 text-base-content">
    <a
      href="#main"
      class="btn btn-sm btn-primary sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4"
      >Skip to content</a
    >
    {/* Normal navbar for non-home pages */}
    {
      !hideNav && (
        <header
          class="shadow-sm bg-base-100/90 backdrop-blur relative"
          style="z-index: 90;"
        >
          <NavBar />
        </header>
      )
    }
    {/* Scroll-aware fixed navbar for home page */}
    {
      hideNav && (
        <header
          id="scroll-navbar"
          class="fixed top-0 left-0 right-0 z-50 shadow-sm bg-base-100/90 backdrop-blur transition-all duration-300 -translate-y-full opacity-0"
        >
          <NavBar />
        </header>
      )
    }
    <main id="main" class="flex-1">
      <slot />
    </main>
    <Footer />
    <script is:inline>
      (function () {
        if (typeof window === "undefined") return;

        const initAOS = () => {
          if (window.__taylormadeAOSLoaded) return;

          const aos = window.AOS;
          if (!aos) return;

          window.__taylormadeAOSLoaded = true;

          const reducedMotionQuery = window.matchMedia(
            "(prefers-reduced-motion: reduce)",
          );

          const shouldDisable = () => reducedMotionQuery.matches;

          aos.init({
            disable: shouldDisable,
            duration: 550,
            easing: "ease-out",
            once: true,
            mirror: false,
            offset: 80,
          });

          window.addEventListener("resize", () => {
            aos.refresh();
          });

          reducedMotionQuery.addEventListener("change", () => {
            aos.refresh();
          });
        };

        if (typeof window.AOS === "undefined") {
          window.addEventListener("load", initAOS, { once: true });
        } else if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", initAOS, {
            once: true,
          });
        } else {
          initAOS();
        }
      })();
    </script>
  </body>
</html>
