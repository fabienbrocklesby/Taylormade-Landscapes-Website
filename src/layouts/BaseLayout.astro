---
import "../styles/output.css";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "TaylorMade Landscapes | Nelson Landscape Design & Gardening",
  description = "Owner-operated landscape gardening, design, and build across Nelson and Tasman by Giles Taylor.",
} = Astro.props as Props;

// Astro's runtime provides `Astro.resolve`, but the type isn't in our defs yet.
// eslint-disable-next-line @typescript-eslint/ban-ts-comment
// @ts-ignore
const aosClientUrl = Astro.resolve("../scripts/aos-client.js");
---

<!doctype html>
<html lang="en" data-theme="garden">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://taylormadelandscapes.nz" />
    <meta
      property="og:image"
      content="https://taylormadelandscapes.nz/og-image.jpg"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="flex min-h-screen flex-col bg-base-100 text-base-content">
    <a
      href="#main"
      class="btn btn-sm btn-primary sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4"
      >Skip to content</a
    >
    <header
      class="shadow-sm bg-base-100/90 backdrop-blur relative"
      style="z-index: 90;"
    >
      <NavBar />
    </header>
    <main id="main" class="flex-1">
      <slot />
    </main>
    <Footer />
    <script type="module" src={aosClientUrl}></script>
  </body>
</html>
